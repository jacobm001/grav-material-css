{% extends 'partials/base.html.twig' %}

{% block content %}

{% set person = page.header.person %}
{% set sites  = page.header.sites %}

<div class="row">
	<div class="col s12">
		<div class="card-panel">
			<h3 class="black-text center-align header">
				{{ person.name }}
			</h3>
			<h5 class="grey-text center-align text-darken-1">
				{{ person.title }}
			</h5>
		</div>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<div class="card horizontal valign-wrapper">
			<div class="card-image card-avatar hide-on-small-only">
				<img src="{{ page.media['avatar.svg'].url }}"/>
			</div>
			<div class="card-content">
				<span class="card-title">Saluton Mondo!</span>
				{{ page.content }}
			</div>
		</div>
	</div>
</div>

<div class="row">
	{% for site in sites %}
	<div class="col s6 m3">
		<div class="card-panel center-align">
			<a href="{{ site.url }}" target="_blank">
				<i class="black-text fa fa-2x fa-{{ site.icon }}"></i>
			</a>
		</div>
	</div>
	{% endfor %}
</div>

{# {% do assets.addJs('theme://js/stackexchange.js', {group: 'content'}) %} #}
{% endblock %}
