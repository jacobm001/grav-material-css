{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="row">
	<div class="col s12">
		<div class="card-panel z-depth-1">
			<div class="row valign-wrapper">
				<div class="col s4 m2">
					<img src="{{ page.media['profile.jpg'].url }}" class="circle responsive-img"/>
				</div>

				<div class="col s8 m10">
					<h3 class="black-text center-align">{{ page.header.person.name }}</h3>
					<h5 class="grey-text center-align text-darken-1">{{ page.header.person.title }}</h5>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<div class="card-panel">
			{{ page.content }}
		</div>
	</div>
</div>

<div class="row">
	<div class="col s12 m6">
		<div class="card blue-grey darken-2 lighten-4">
			<div class="card-content white-text">
				<span class="card-title"><i class="fa fa-github"></i> GitHub</span>
				<p>Content goes here</p>
			</div>
			<div class="card-action">
				<a href="https://github.com/jacobm001">View Profile</a>
			</div>
		</div>
	</div>

	<div class="col s12 m6">
		<div class="card blue-grey darken-2 lighten-4">
			<div class="card-content white-text">
				<span class="card-title"><i class="fa fa-stack-exchange"></i> Stack Exchange</span>
				<p id="reputation"></p>
			</div>
			<div class="card-action">
				<a href="https://stackexchange.com/users/1163298/jacob-mastel?tab=top">View Profile</a>
			</div>
		</div>
	</div>

	<div class="col s12 m6">
		<div class="card blue-grey darken-2 lighten-4">
			<div class="card-content white-text">
				<span class="card-title"><i class="fa fa-instagram"></i> Instagram</span>
				<p>Content goes here</p>
			</div>
			<div class="card-action">
				<a href="https://www.instagram.com/jacob.mastel">View Profile</a>
			</div>
		</div>
	</div>
</div>

{% do assets.addJs('theme://js/stackexchange.js', {group: 'content'}) %}
{% endblock %}
