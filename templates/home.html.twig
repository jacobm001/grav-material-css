{% extends 'partials/base.html.twig' %}

{% block content %}

{% set person = page.header.person %}
{% set sites  = page.header.sites %}

<div class="row">
	<div class="col s12 xl10 offset-xl1">
		<div class="card horizontal valign-wrapper center-align">
			<div class="card-image card-avatar">
				<img src="{{ page.media['avatar.svg'].url }}"/>
			</div>
			<div class="card-content" style="width: 100%">
				<h1>{{ person.name }}</h1>
				<h2 class="grey-text center-align text-darken-1">{{ person.title }}</h2>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col s12 xl10 offset-xl1">
		<div class="card">
			<div class="card-content">
				<span class="card-title">Saluton Mondo!</span>
				{{ content }}
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col s12 xl10 offset-xl1">
		<div class="row">
		{% for site in sites %}
		<div class="col s12 m3">
			<div class="card-panel center-align">
				<a href="{{ site.url }}" target="_blank">
					<i class="black-text fa fa-2x fa-{{ site.icon }}"></i>
				</a>
			</div>
		</div>
		{% endfor %}
		</div>
	</div>
</div>

{# {% do assets.addJs('theme://js/stackexchange.js', {group: 'content'}) %} #}
{% endblock %}
