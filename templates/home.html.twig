{% extends 'partials/base.html.twig' %}

{% block content %}

<div class="row valign-wrapper">
	<div class="col s12 m3">
		<img src="{{ page.media['avatar.png'].url }}" class="responsive-img"/>
	</div>

	<div class="col s12 m9">
		<h2 class="black-text center-align">
			{{ page.header.person.name }}
		</h2>
		<h5 class="grey-text center-align text-darken-1">
			{{ page.header.person.title }}
		</h5>
	</div>
</div>

<div class="row">
	<div class="col m10 offset-m1 ">
		{{ page.content }}
	</div>
</div>

<div class="row">

	<div class="col s12 m4">
		
	</div>

	<div class="col s12 m4">
	</div>


	<div class="col s12 m4 ">
		<ul class="collection with-header no-background">
			<li class="center-align collection-header"><h4>Find Me Online</h4>
			<li class="collection-item right-align">
				StackExchange
				<a class="secondary-content">
					<i class="black-text fa fa-stack-exchange fa-collection fa-space-left"></i>
				</a>
			</li>
			<li class="collection-item right-align">
				Github
				<a href="#!" class="secondary-content">
					<i class="black-text fa fa-github fa-collection fa-space-left"></i>
				</a>
			</li>
			<li class="collection-item right-align">
				Instagram
				<a href="#!" class="secondary-content">
					<i class="black-text fa fa-instagram fa-collection fa-space-left"></i>
				</a>
			</li>
			<li class="collection-item right-align">
				Twitter
				<a href="#!" class="secondary-content">
					<i class="black-text fa fa-twitter fa-collection fa-space-left"></i>
				</a>
			</li>
		</ul>
	</div>
</div>

{# {% do assets.addJs('theme://js/stackexchange.js', {group: 'content'}) %} #}
{% endblock %}
