{% extends 'partials/base.html.twig' %}

{% block content %}
{% set content = page.content|slice(page.summary|length) %}
{% set publish_date = page.date|date('F ') ~ page.date|date('j')|ordinalize() ~ page.date|date(', Y') %}

<div class="row">
	<div class="col s12">
		<div class="card-panel center-align">
			<h1>{{ page.title }}</h1>
		</div>
	</div>

	<div class="col s12">
		<span class="chip">Published: {{ publish_date }}</span>

		<span class="chip right color-reddit">
			<a 
				class="social-share" 
				href="http://www.reddit.com/submit/?url={{ page.url(true) }}"
				target="_blank"
			>
				<i class="white-text fa fa-reddit-alien"></i>
			</a>
		</span>

		<span class="chip right color-twitter">
			<a
				class="social-share" 
				href="https://twitter.com/intent/tweet/?text={{ page.title }}&url={{ page.url(true) }}"
				target="_blank"
			>
				<i class="white-text fa fa-twitter"></i>
			</a>
		</span>
		
		<span class="chip right color-facebook">
			<a 
				class="social-share" 
				href="https://www.facebook.com/sharer/sharer.php?u={{ page.url(true) }}"
				target="_blank"
			>
				<i class="white-text fa fa-facebook"></i>
			</a>
		</span>
	</div>

	<div class="col s12">
		<div class="row">
			<div class="col s12">
				<div class="card-panel blog-panel">
					<div class="blog-content">
						{{ content }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col12">
		{% for tag in page.taxonomy.tag %}
		<span class="chip right">{{ tag }}</span>
		{% endfor %}
	</div>
</div>

{% endblock %}